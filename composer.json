{
    "name": "ieim/laravel-paths",
    "type": "library",
    "description": "Objects which make it even easier to work with templates/resources in Laravel.",
    "keywords": [
        "ieim",
        "laravel-paths"
    ],
    "homepage": "https://github.com/ieim/laravel-paths",
    "license": "MIT",
    "authors": [
        {
            "name": "Marc Eichenseher",
            "email": "this@marceichenseher.de",
            "homepage": "https://github.com/ieim",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.2"
    },
    "require-dev": {
        "mockery/mockery": "^1.3",
        "phpunit/phpunit": "~8.4.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ieim\\LaravelPaths\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ieim\\LaravelPaths\\Tests\\": "tests/Units"
        }
    },
    "scripts": {
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "test": "phpunit"
    }
}
